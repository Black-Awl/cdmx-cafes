---
import Layout from '../layouts/Layout.astro';
import Map from '../components/Map.astro';
import Filters from '../components/Filters.astro';
---

<Layout title="Mexico City Coffee Map">
  <main>
    <h1>Mexico City Coffee Map</h1>
    <Filters />
    <Map />
  </main>
</Layout>

<style>
  main {
    position: relative;
    width: 100%;
    height: 100vh;
  }
  h1 {
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    background: white;
    padding: 10px;
    border-radius: 5px;
  }
</style>